# ANPR Toll Collection System Configuration

# Database Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# API Configuration
PLATE_RECOGNIZER_TOKEN=your-plate-recognizer-api-token
ANPR_REGION=us-ca

# Video Capture Configuration
VIDEO_DURATION=10000
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
OUTPUT_FILE=test.h264
FLAG_FILE=./flag.txt

# Toll System Configuration
TOLL_LOCATION=Highway-101-North
BARRIER_OPEN_COMMAND=echo "BARRIER_OPEN"
BARRIER_CLOSE_COMMAND=echo "BARRIER_CLOSE"

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Health Check Configuration
HEALTH_CHECK_PORT=3001
NODE_ENV=development

# Webhook Configuration (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/toll-events

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Security Configuration
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=100

# Email/SMS Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMS_API_KEY=your-sms-api-key
